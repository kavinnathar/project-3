<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Review System</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        body {
            background-color: #121212;
            color: #e0e0e0;
        }

        .navbar {
            background-color: #343a40 !important;
        }

        .navbar-light .navbar-nav .nav-link {
            color: #e0e0e0 !important;
        }

        .navbar-light .navbar-nav .nav-link:hover {
            color: #f0f0f0 !important;
        }

        .container {
            margin-top: 20px;
        }

        .movie-card {
            position: relative;
            width: 200px;
            height: 200px;
            margin: 15px;
            cursor: pointer;
            overflow: hidden;
            display: inline-block;
        }

        .movie-card img {
            width: 100%;
            height: 100%;
            transition: transform 0.3s;
        }
        
        .movie-card:hover img {
            transform: scale(1.1);
        }

        .movie-info {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(0, 0, 0, 0.7);
            width: 100%;
            height: 100%;
            color: goldenrod;
            text-align: center;
            opacity: 0;
            transition: opacity 0.3s;
            padding-top: 40%;
        }

        .movie-card:hover .movie-info {
            opacity: 1;
        }

        .movie-info button {
            margin-top: 5px;
            background-color: goldenrod;
            color: black;
        }

        .movie-info button:hover {
            background-color: black;
            color: goldenrod;
        }

        .movie-info a {
            color: black;
            text-decoration: none;
        }

        .movie-info a:hover {
            color: goldenrod;
        }

        .ml-auto {
            margin-left: auto !important;
        }

        .form-inline {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .movies-container {
            overflow-x: auto;
            white-space: nowrap;
            width: 100%;
            display: flex;
        }
        .movies-container .movie-card {
            width: 200px;
            height: 200px;
        }

        #searchResultsContainer {
            display: none;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Movie Review System</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <form id="searchForm" class="form-inline my-2 my-lg-0 mx-auto">
                <input id="searchInput" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
            
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/home">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/addMovie">Add Movie</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/insert">Add Review</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/update">Update Review</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/delete">Delete Review</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/report">Generate Report</a>
                </li>
            </ul>
            
        </div>
    </nav>

    <div class="container">
        <h2 id="latestMoviesSectionTitle">LATEST MOVIES</h2>
        <div id="latestMoviesContainer" class="movies-container">
            <% movies.filter(movie => movie.isLatest).forEach((movie) => { %>
                <div class="movie-card">
                    <img src="<%= movie.image %>" alt="<%= movie.mname %>">
                    <div class="movie-info">
                        <h5><%= movie.mname %></h5>
                        <button class="btn btn-primary">
                            <a href="/movies/<%= movie._id %>">Review</a>
                        </button>
                    </div>
                </div>
            <% }) %>
        </div>

        <h2 id="topRatedMoviesSectionTitle">TOP-RATED MOVIES</h2>
        <div id="topRatedMoviesContainer" class="movies-container">
            <% movies.filter(movie => movie.rating === 5 && !movie.isLatest).forEach((movie) => { %>
                <div class="movie-card">
                    <img src="<%= movie.image %>" alt="<%= movie.mname %>">
                    <div class="movie-info">
                        <h5><%= movie.mname %></h5>
                        <button class="btn btn-primary">
                            <a href="/movies/<%= movie._id %>">Review</a>
                        </button>
                    </div>
                </div>
            <% }) %>
        </div>

        <div id="searchResultsContainer" class="movies-container">
            <h2 id="searchResultsTitle">SEARCH RESULTS</h2>
            <div id="searchResults"></div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchForm = document.getElementById('searchForm');
            const searchInput = document.getElementById('searchInput');
            const searchResultsContainer = document.getElementById('searchResultsContainer');
            const searchResults = document.getElementById('searchResults');

            searchForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const query = searchInput.value;
                if (!query) {
                    alert('Please enter a search term');
                    return;
                }

                console.log('Searching for:', query); // Debug statement

                fetch(`/search?q=${encodeURIComponent(query)}`)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(movies => {
                        console.log('Search results:', movies); // Debug statement
                        searchResults.innerHTML = ''; // Clear previous search results
                        if (movies.length > 0) {
                            searchResultsContainer.style.display = 'block';
                            movies.forEach(movie => {
                                const movieCard = document.createElement('div');
                                movieCard.className = 'movie-card';
                                movieCard.innerHTML = `
                                    <img src="${movie.image}" alt="${movie.mname}">
                                    <div class="movie-info">
                                        <h5>${movie.mname}</h5>
                                        <button class="btn btn-primary">
                                            <a href="/movies/${movie._id}">Review</a>
                                        </button>
                                    </div>
                                `;
                                searchResults.appendChild(movieCard);
                            });
                        } else {
                            searchResultsContainer.style.display = 'block';
                            searchResults.innerHTML = `<p>No results found for "${query}"</p>`;
                        }
                    })
                    .catch(error => {
                        console.error('Error fetching search results:', error); // Debug statement
                        alert('There was an error fetching the search results.');
                    });
            });
        });
    </script>
</body>
</html>
