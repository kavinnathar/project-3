<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Movies</h1>
        <div class="mt-3">
            <a href="/" class="btn btn-secondary mb-3">Back to Home</a>
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Movie Name</th>
                        <th scope="col">Director</th>
                        <th scope="col">Genre</th>
                        <th scope="col">Language</th>
                        <th scope="col">Rating</th>
                        <th scope="col">Review</th>
                        <th scope="col">Image</th>
                        <th scope="col">Trailer</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% movies.forEach((movie, index) => { %>
                    <tr>
                        <th scope="row"><%= index + 1 %></th>
                        <td><%= movie.mname %></td>
                        <td><%= movie.director %></td>
                        <td><%= movie.genre %></td>
                        <td><%= movie.language %></td>
                        <td><%= movie.rating %></td>
                        <td><%= movie.review %></td>
                        <td><img src="<%= movie.image %>" alt="<%= movie.mname %>" style="width: 100px;"></td>
                        <td><a href="<%= movie.trailer %>">Watch Trailer</a></td>
                        <td><a href="/movies/<%= movie._id %>" class="btn btn-info">Review</a></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
